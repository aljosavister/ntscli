{
    "compileOnSave": true,
    "compilerOptions": {
        "lib": [
          "DOM",
          "ESNext",
          "ESNext.AsyncIterable"
        ],
        "baseUrl": "src",
        "module": "commonjs",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "noImplicitAny": true,
        "removeComments": true,
        "sourceMap": true,
        "outDir": "./dist",
        "allowJs": true,
        "target": "es6",
        "paths": {
            "*": [
                "./node_modules/*",
                "./src/types/*",
            ]
        }        
    },
    "include": [
        "./src/**/*"
    ]
}